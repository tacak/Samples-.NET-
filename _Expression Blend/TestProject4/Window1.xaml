<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xml:lang="ja-JP"
	x:Class="TestProject4.Window1"
	x:Name="Window"
	Title="Window"
	Width="640" Height="480" xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

	<Viewbox x:Name="LayoutRoot" Stretch="Fill">
		<Viewbox Margin="0,0,0,0" Width="250" Height="250">
			<StackPanel Margin="0,0,0,0" Width="250" Height="250">
				<Button d:LayoutOverrides="Width, Height" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="250" Height="50" Content="Button"/>
				<CheckBox d:LayoutOverrides="Width, Height" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="250" Height="50" Content="TestCheckBox"/>
				<RadioButton HorizontalAlignment="Stretch" Margin="0,0,0,0" Width="250" Height="50" Content="RadioButton"/>
				<TextBox HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="250" Height="50" Text="TextBox" TextWrapping="Wrap"/>
				<PasswordBox HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="250" Height="50"/>
			</StackPanel>
		</Viewbox>
	</Viewbox>
</Window>